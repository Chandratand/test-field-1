generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  address     String?
  birthdate   DateTime?
  birthplace  String?

  // Soft delete field
  deletedAt DateTime? @map("deleted_at")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  stock       Int
  price       Float
  
  // Soft delete field
  deletedAt DateTime? @map("deleted_at")
}